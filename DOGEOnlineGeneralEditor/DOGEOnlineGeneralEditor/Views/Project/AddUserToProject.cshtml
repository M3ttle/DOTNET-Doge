@model DOGEOnlineGeneralEditor.Models.ViewModels.UserCollabViewModel
@{
    ViewBag.Title = "AddUserToProject";
}

<h2>AddUserToProject</h2>
<div class="project-table">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NotCollaborators)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.NotCollaborators)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    <button onclick="setUserID('@item.UserID')" class="btn-default">Add</button>
                </td>
            </tr>
        }

    </table>
</div>
<div class="project-table">

        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Collaborators)
                </th>
            </tr>

            @foreach (var item in Model.Collaborators)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                </tr>
            }

        </table>
    @Html.ActionLink("Back to project", "Details", "Project", new { id = Model.ProjectID }, null)
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.ProjectID)
        @Html.Hidden("UserID", null, htmlAttributes: new { @id = "HiddenUserID" })
        <input type="submit" hidden="hidden" id="hiddenSubmit" />
    }
    @section Scripts {
        <script>
            function setUserID(userID) {
                $("#HiddenUserID").val(userID);
                document.getElementById("hiddenSubmit").click();
            }
        </script>
    }
