<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - DOGE</title>
    <link href="https://fonts.googleapis.com/css?family=Ubuntu" rel="stylesheet">
    <script src="~/Scripts/doge.js"></script>
    <script src="~/Scripts/konami.js"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="script">
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a href="/Workspace/MyProjects">
                        <img class="doge-logo" src="~/Images/Doge_small.png" alt="DOGE logo">
                    </a>
                    @if (Request.IsAuthenticated)
                    {
                        <a class="navbar-brand" href="/Workspace/MyProjects">DOGE</a>}
                    else
                    {
                        <a class="navbar-brand" href="/">DOGE</a>
                    }
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">

                        @if (Request.IsAuthenticated)
                        {
                            <li><a href="/Workspace/MyProjects">My Projects</a></li>
                            <li><a href="/Workspace/PublicProjects">Public Projects</a></li>
                        }
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
        <div class="container body-content">
            @RenderBody()
        </div>
        <footer class="navbar-fixed-bottom">
            <div class="container body-content">
                <p>&copy; @DateTime.Now.Year - DOGE</p>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
        <script src="~/Scripts/jquery.signalR-2.2.2.min.js"></script>
        <script src="~/signalr/hubs"></script>
        <script src="~/Scripts/liveCounter.js"></script>

    </div>

    <div class="noscript">
        <div class="doge-header">You need to enable javascript to use this website</div>
        <img src="~/Images/Doge.png" alt="DOGE Logo"/>
    </div>
</body>
</html>

