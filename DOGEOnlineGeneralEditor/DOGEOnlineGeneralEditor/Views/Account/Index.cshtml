@model DOGEOnlineGeneralEditor.Models.IndexViewModel
@{
    ViewBag.Title = "Account";
}

<ul class="top-nav">
    <li><a href="/Workspace/MyProjects">My Projects</a></li>
    <li><a href="/Workspace/PublicProjects">Public Projects</a></li>
    <li><a class="active" href="">My Account</a></li>
</ul>

<h2>@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>Change your account settings</h4>
    <hr />
    @using (Html.BeginForm("Index", "Account", FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(m => m.Name, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Name)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.DropDownListFor(m => m.Gender, ViewData["Genders"] as List<SelectListItem>)
            @Html.ValidationMessageFor(m => m.Gender, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.DropDownListFor(m => m.UserTypeID, ViewData["UserTypes"] as List<SelectListItem>)
            @Html.ValidationMessageFor(m => m.UserTypeID, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-default" value="Account/Index" />
        </div>
    }


    @Html.ActionLink("Change your password", "ChangePassword")
</div>
