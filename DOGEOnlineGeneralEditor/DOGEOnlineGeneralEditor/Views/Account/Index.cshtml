@model DOGEOnlineGeneralEditor.Models.IndexViewModel
@{
    ViewBag.Title = "Account";
}

<div class="small-table-container">
    <div class="doge-header">My Account</div>
    <div class="form-container">
        <p class="text-success">@ViewBag.StatusMessage</p>
        <div>
            @using (Html.BeginForm("Index", "Account", FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.Name, new { @class = "control-label" })
                    @Html.DisplayFor(m => m.Name)
                    @Html.HiddenFor(m => m.Name)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                    @Html.DisplayFor(m => m.Email)
                    @Html.HiddenFor(m => m.Email)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Gender, "Gender", new { @class = "control-label" })
                    @Html.EnumDropDownListFor(m => m.Gender, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.UserTypeID, "User Type", new { @class = "control-label" })
                    @Html.DropDownList("UserTypeID", null, htmlAttributes: new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-default" value="Update" />
                </div>}


            @Html.ActionLink("Change my password", "ChangePassword")
        </div>
    </div>
</div>